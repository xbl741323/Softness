/* pages/classify /classify .wxss */
page {
  width: 100%;
  height: 100%;
}

.classify-content {
  background: #ECEEEF;
  display: flex;
  font-size: 28rpx;
  position: relative;
}

/*
搜索框和背景区域
*/
.home-search image {
  width: 100%;
  height: 346rpx;
}

.top-fixed {
  position: fixed;
  z-index: 10000;
  top: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #f7f5f5;
}

.search-contain {
  display: flex;
  width: 550rpx;
  align-items: center;
  height: 72rpx;
  background: #ffffff;
  border-radius: 36rpx;
  border: 2rpx solid #36A6FE;
}

.search-contain image {
  width: 32rpx;
  height: 32rpx;
}

.search-contain-left {
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-contain-left text {
  margin-left: 40rpx;
  margin-right: 4rpx;
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
}

.lang-sty {
  width: 2rpx;
  height: 40rpx;
  background: #e4e4e4;
  margin-left: 12rpx;
  margin-right: 20rpx;
}

.search-contain-right {
  display: flex;
  align-items: center;
}

.search-contain-right text {
  display: inline-block;
  color: #666666;
  font-size: 32rpx;
}

.fixed-search {
  color: #333333;
  font-weight: 500;
  font-size: 32rpx;
  margin-left: 24rpx;
}

/*
内容区域
*/
.home-content {
  margin-top: 120rpx;
  display: flex;
}

.content-left {
  position: fixed;
  width: 206rpx;
  left: 0;
  background: #ECEEEF;
  z-index: 1000;
}

.content-left view {
  width: 206rpx;
  height: 96rpx;
  color: #122037;
  text-align: center;
  line-height: 96rpx;
}

.left-fixed {
  position: fixed;
  top: 0;
  left: 0;
}

.content-right {
  background: #fff;
  width: 542rpx;
  margin-left: 206rpx;
  padding-bottom: 120rpx;
}

.choosed {
  position: relative;
  background: #fff;
  font-weight: bold;
  font-size: 30rpx;
  z-index: 1000;
}

.choosed-img {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  width: 8rpx;
  height: 32rpx;
  background: #36a6fe;
  border-radius: 0px 8rpx 8rpx 0px;
}

.project-content {
  position: relative;
  padding-bottom: 100rpx;
}

.items-list {
  display: flex;
  flex-direction: column;
  padding: 70rpx 32rpx 30rpx;
  padding-bottom: 120rpx;
}

.active-items-list {
  padding-top: 0 !important;
}

/*
 筛选条件样式
*/
.scroll-contain {
  width: 100%;
  white-space: nowrap;
  padding-top: 20rpx;
}

.fixed-content {
  position: fixed;
  width: 542rpx;
  top: 120rpx;
  left: 206rpx;
  background: #ffffff;
  z-index: 1000;
  padding-left: 30rpx;
  padding-bottom: 20rpx;
}

.new-scroll {
  display: flex;
}

.scroll-item {
  height: 56rpx;
  background: #deefff;
  border-radius: 16rpx;
  color: #747474;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx 0 20rpx;
  margin-right: 16rpx;
}

.scroll-item>text:nth-of-type(2) {
  display: inline-block;
  width: 0rpx;
  height: 0rpx;
  border-top: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-left: 12rpx solid #888888;
  transform: rotate(-45deg) translateY(-50%);
  margin-left: 10rpx;
}

.active-scroll-sty {
  color: #36A6FE;
}

.active-angle-sty {
  border-left: 12rpx solid #36A6FE !important;
}

.option-list {
  width: 542rpx;
  position: absolute;
  top: 76rpx;
  left: 0;
  background: #ffffff;
  display: flex;
  flex-wrap: wrap;
  z-index: 1000;
  padding: 20rpx 0 50rpx 30rpx;
}

.pad1 {
  padding: 20rpx 0 150rpx 30rpx;
}

.pad2 {
  padding: 20rpx 0 110rpx 30rpx;
}

.option-item {
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  color: #888888;
}

.active-option {
  color: #36A6FE !important;
}

/*
  遮罩样式
*/

.global-tip {
  position: fixed;
  overflow-y: hidden;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
}

.no-data {
  margin-top: 50rpx;
  color: #666666;
  display: flex;
  justify-content: center;
}