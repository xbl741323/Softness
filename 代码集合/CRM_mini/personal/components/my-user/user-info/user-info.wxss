/* personal/components/my-user/user-info/user-info.wxss */
/*
  公共样式
*/
.user-info-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-top: 24rpx;
}

.user-info-title {
  color: #333333;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.user-auth-btn {
  display: inline-block;
  width: 104rpx;
  height: 32rpx;
  background: #c4e2ff;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Light;
  text-align: center;
  color: #4ba8ff;
  margin-left: 2rpx;
  padding: 5rpx;
}

.mar-bot {
  border-bottom: 2rpx solid #eaebef;
  height: 50rpx;
}

.mar-top {
  border-top: 2rpx solid #eaebef;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}

/*
  公共样式-横向
*/

.user-info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.user-info-item>text:nth-of-type(1) {
  display: inline-block;
  min-width: 140rpx;
  color: #7B7B7B;
}

.user-info-item>text:nth-of-type(2) {
  color: #555555;
}

.fix-title-sty {
  width: 160rpx !important;
}

/*
  公共样式-纵向
*/

.user-info-column {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
}

.user-info-column>text:nth-of-type(1) {
  color: #7B7B7B;
  margin-bottom: 4rpx;
}

.user-info-column>view:nth-of-type(1) {
  color: #555555;
}

/*
  公共样式-联系人信息
*/

.user-info-contact {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
  color: #555555;
}

.contact-head {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.contact-job>text:nth-of-type(1) {
  color: #7B7B7B;
  margin-right: 16rpx;
}

.phone-icon {
  width: 32rpx;
  height: 32rpx;
}

.contact-phone {
  display: flex;
  align-items: center;
}

.contact-phone>text {
  margin-right: 16rpx;
}

.contact-phone>text:nth-of-type(1) {
  color: #7B7B7B !important;
}

.contact-name>text:nth-of-type(1) {
  color: #7B7B7B !important;
  margin-right: 16rpx;
}

.certify-sty {
  display: inline-block;
  background: #0082FC;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
}

/*
  公共样式-财务及人员情况
*/

.user-info-unit {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.unit-head {
  flex: 2;
  display: flex;
}

.unit-head>text:nth-of-type(1) {
  display: inline-block;
  text-align: right;
  min-width: 180rpx;
  margin-right: 40rpx;
  color: #7B7B7B;
}

.unit-head>text:nth-of-type(2) {
  color: #555555;
}

.unit-footer {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.unit-footer>text:nth-of-type(1) {
  margin-right: 40rpx;
  color: #555555;
}

.unit-footer>text:nth-of-type(2) {
  color: #7B7B7B;
}

/*
  公共样式-人员信息
*/

.user-info-man {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.user-man-name {
  flex: 1;
  display: flex;
  color: #7B7B7B;
}

.user-man-name>text:nth-of-type(2) {
  color: #555555;
  margin-left: 24rpx;
}

.user-man-phone {
  flex: 1;
  display: flex;
  color: #7B7B7B;
}

.user-man-phone>text:nth-of-type(2) {
  color: #555555;
  margin-left: 24rpx;
}

.auth-img {
  width: 32rpx;
  height: 32rpx;
}

.login-sty {
  display: flex;
  margin-bottom: 24rpx;
}

.login-sty>text:nth-of-type(1) {
  display: inline-block;
  min-width: 140rpx;
  color: #7B7B7B;
  flex: 1;
}

.login-sty>text:nth-of-type(2) {
  display: inline-block;
  color: #555555;
  text-align: right;
  padding-left: 10rpx;
}

