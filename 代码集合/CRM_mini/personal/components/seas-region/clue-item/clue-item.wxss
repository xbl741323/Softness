/* personal/components/my-clue/clue-item/clue-item.wxss */
.clue-item {

  background: #ffffff;
  width: 100%;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  padding: 32rpx 24rpx 0 24rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}


/*
  头部区域
*/
.clue-head {


  display: flex;
  justify-content: space-between;
  align-items: center;
}

.clue-head>text:nth-of-type(2) {
  font-size: 24rpx;
}

/*
  内容区域
*/
.clue-info {
  margin: 20rpx 0;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.clue-info-name {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.unit-state {

  font-size: 28rpx;
  color: #555555;
  line-height: 54rpx;
}

.unit-state-top {
  display: flex;
  justify-content: space-between;
}

.clue-info-name>text:nth-of-type(1) {
  /* display: inline-block; */
  font-weight: bold;
  /* width: 300rpx; */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.clue-info-contact {
  display: flex;
  align-items: center;
  color: #B4B4B4;
}

.over-name-sty {
  display: inline-block;
  max-width: 120rpx;
  margin-right: 8rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.phone-call {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.clue-info-area {
  margin-top: 24rpx;
  color: #555555;
}

.clue-info-label {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #EAEBEF;
  margin-top: 24rpx;
  line-height: 52rpx;
  align-items: center;
  color: #555555;
}

.clue-info-label-style {
  padding-bottom: 20rpx;
  /* border-bottom: 1px solid #EAEBEF; */
  margin-top: 24rpx;
  line-height: 56rpx;
  align-items: center;
  color: #555555;
}

.clue-info-label image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

/*
  按钮区域
*/
.clue-btn {
  height: 92rpx;
  border-top: 2rpx solid #EAEBEF;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.clue-btn>text {
  color: #0082FC;
  margin-right: 24rpx;
}

/*
  公共样式区域
*/
.common-tag {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 12rpx;
  height: 48rpx;
  background: #008dff;
  border-radius: 8rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.depart-bg-sty {
  background: #FEBE3D;
}

.group-bg-sty {
  background: #8CC029;
}

.clue-state {

  display: flex;
  flex-wrap: wrap;
  padding: 0 0 32rpx 0;

}

.clue-state>view {
  min-width: 50%;
  line-height: 52rpx;
  color: #555555;
  font-size: 28rpx;
}

.succeed {
  color: #fc561F;
}

.readwaitstart {
  color: #0082fc;
}

.center-certify-sty {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}