<!--personal/components/my-clue/modify/modify-person/modify-person.wxml-->
<view class="modify-basic" hidden="{{showStatus}}">
  <!-- 人员信息 -->
  <view class="basic-type">
    <text class="basic-type-title">人员信息</text>
  </view>

  <!-- 法人姓名 -->
  <view class="common-contain">
    <view class="common-item">
      <view class="common-item-head">
        <text class="common-item-label">法人姓名</text>
      </view>
      <view class="common-item-foot">
        <input disabled="{{isCertified&&operateType==1}}" value="{{personInfo.legalPerson}}" bindblur="changeInput" data-type="0" class="contact-long-input" type="text" placeholder="请输入法人姓名" placeholder-class="p-sty" />
      </view>
    </view>
    <view class="common-item">
      <view class="common-item-head">
        <text class="common-item-label">电话</text>
      </view>
      <view class="common-item-foot">
        <input disabled="{{isCertified&&operateType==1}}" value="{{personInfo.legalPersonPhone}}" bindblur="changeInput" data-type="1" class="contact-long-input" type="number" placeholder="请输入电话" placeholder-class="p-sty" />
      </view>
    </view>
  </view>

  <!-- 财务主管 -->
  <view class="common-contain">
    <view class="common-item">
      <view class="common-item-head">
        <text class="common-item-label">财务主管</text>
      </view>
      <view class="common-item-foot">
        <input value="{{personInfo.treasurer}}" bindblur="changeInput" data-type="2" class="contact-long-input" type="text" placeholder="请输入财务主管姓名" placeholder-class="p-sty" />
      </view>
    </view>
    <view class="common-item">
      <view class="common-item-head">
        <text class="common-item-label">电话</text>
      </view>
      <view class="common-item-foot">
        <input value="{{personInfo.treasurerPhone}}" bindblur="changeInput" data-type="3" class="contact-long-input" type="number" placeholder="请输入电话" placeholder-class="p-sty" />
      </view>
    </view>
  </view>

  <!-- 技术主管 -->
  <view class="common-contain">
    <view class="common-item">
      <view class="common-item-head">
        <text class="common-item-label">技术主管</text>
      </view>
      <view class="common-item-foot">
        <input value="{{personInfo.technicalDirector}}" bindblur="changeInput" data-type="4" class="contact-long-input" type="text" placeholder="请输入技术主管姓名" placeholder-class="p-sty" />
      </view>
    </view>
    <view class="common-item">
      <view class="common-item-head">
        <text class="common-item-label">电话</text>
      </view>
      <view class="common-item-foot">
        <input value="{{personInfo.technicalDirectorPhone}}" bindblur="changeInput" data-type="5" class="contact-long-input" type="number" placeholder="请输入电话" placeholder-class="p-sty" />
      </view>
    </view>
  </view>

  <!-- 营销主管 -->
  <view class="common-contain">
    <view class="common-item">
      <view class="common-item-head">
        <text class="common-item-label">营销主管</text>
      </view>
      <view class="common-item-foot">
        <input value="{{personInfo.marketingDirector}}" bindblur="changeInput" data-type="6" class="contact-long-input" type="text" placeholder="请输入营销主管姓名" placeholder-class="p-sty" />
      </view>
    </view>
    <view class="common-item">
      <view class="common-item-head">
        <text class="common-item-label">电话</text>
      </view>
      <view class="common-item-foot">
        <input value="{{personInfo.marketingDirectorPhone}}" bindblur="changeInput" data-type="7" class="contact-long-input" type="number" placeholder="请输入电话" placeholder-class="p-sty" />
      </view>
    </view>
  </view>

  <!-- 行政主管 -->
  <view class="common-contain">
    <view class="common-item">
      <view class="common-item-head">
        <text class="common-item-label">行政主管</text>
      </view>
      <view class="common-item-foot">
        <input value="{{personInfo.executiveDirector}}" bindblur="changeInput" data-type="8" class="contact-long-input" type="text" placeholder="请输入行政主管姓名" placeholder-class="p-sty" />
      </view>
    </view>
    <view class="common-item">
      <view class="common-item-head">
        <text class="common-item-label">电话</text>
      </view>
      <view class="common-item-foot">
        <input value="{{personInfo.executiveDirectorPhone}}" bindblur="changeInput" data-type="9" class="contact-long-input" type="number" placeholder="请输入电话" placeholder-class="p-sty" />
      </view>
    </view>
  </view>

  <!-- 按钮区域 -->
  <view class="common-btn">
    <text bindtap="handelOperate" data-num="3">上一步</text>
    <text bindtap="handelOperate" data-num="2">下一步</text>
  </view>
</view>