/* personal/pages/my-user/list/list.wxss */
page {
  background: #F5F7FB;
}

.user-contain {
  padding-bottom: 20rpx;
}

.out-drop-sty {
  margin: 24rpx auto;
  width: 688rpx;
  box-shadow: none !important;
  background: #fff !important;
  height: 50rpx !important;
  padding: 12rpx;
  font-size: 24rpx !important;
  z-index: 1000 !important;
  border-radius: 15rpx;
}

.user-fixed {
  top: 0;
  width: 100%;
  position: fixed;
  background: #F5F7FB;
  padding-top: 15rpx;
}

/*
  搜索框和背景区域
*/

.top-fixed {
  width: 100%;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #f7f5f5;
}

.search-contain {
  display: flex;
  width: 640rpx;
  align-items: center;
  height: 72rpx;
  background: #ffffff;
  border-radius: 36rpx;
  border: 2rpx solid #36A6FE;
}


.search-contain-left {
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-contain-left text {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 85rpx;
  margin-left: 30rpx;
  margin-right: 0rpx;
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}

.search-contain-left image {
  width: 32rpx;
  height: 32rpx;
}
.search-contain-right {
  display: flex;
  align-items: center;
}

.search-contain-right image {
  width: 36rpx;
  height: 36rpx;
}

.search-contain-right input {
  width: 420rpx;
  display: inline-block;
  color: #666666;
  font-size: 28rpx;
  margin-left: 8rpx;
}


.active-input-sty {
  width: 350rpx !important;
  z-index: 1;
}

.fixed-search {
  color: #333333;
  font-weight: bold;
  font-size: 28rpx;
  margin-left: 12rpx;
  padding: 20rpx 0;
}

.close-icon {
  position: absolute;
  right: 110rpx;
  z-index: 999 !important;
  width: 76rpx;
  height: 76rpx;
}

/*
  搜索栏
*/
.search-bar-box {
  width: 702rpx;
  height: 258rpx;
  background: #ffffff;
  border-radius: 10px;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  margin: auto;
  padding-top: 24rpx;
  margin-bottom: 24rpx;
}

.search-bar-con {
  width: 100%;
  height: 70rpx;
  color: #333333;
}

.search-bar-con>view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-bar-con>text {
  display: inline-block;
  width: 112rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: justify;
  text-justify: distribute-all-lines;
  text-align-last: justify;
  padding: 15rpx;
}

.txt-sty {
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Light;
  font-weight: 300;
  color: #d0d0d0;
}

.search-bar-con>input {
  width: 523rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  border-bottom: 1px solid #E5E6EB;
  vertical-align: middle;
}

.search-bar-btn {
  width: 100;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-bar-btn>view:nth-of-type(1) {
  width: 498rpx;
}

.search-bar-btn>view:nth-of-type(2) {
  width: 120rpx;
  height: 40rpx;
  display: inline-block;
  background: #0082FC;
  color: #fff;
  font-size: 26rpx;
  border-radius: 50rpx;
  text-align: center;
  flex: 1;
}

.search-bar-btn>image {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 24rpx;
  margin-right: 20rpx;
}

/*
  内容展示区域
*/

.user-list {
  display: flex;
  flex-direction: column;
  margin-top: 200rpx;
  margin-bottom: 75rpx;
}

.empty-contain {
  margin-top: 50%;
  margin-left: 50%;
  transform: translateX(-40%);
  color: #555555;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-img {
  width: 330rpx;
  height: 360rpx;
}

.mar-top {
  margin-top: 400rpx;
}

/* 
  底部固定栏
*/
.user-bottom-fixed {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user-bottom-box {
  width: 160rpx;
}

.user-bottom-box>image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.user-bottom-box>text {
  display: inline-block;
  vertical-align: middle;
  padding-left: 15rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  color: #333333;
}

/* 
  分配弹窗样式
*/
.allot-box {
  width: 656rpx;
  height: 468rpx;
  background: #ffffff;
  overflow: hidden;
}

.allot-title {
  width: 656rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #eaebef;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  color: #333333;
  margin-left: 32rpx;
  font-weight: bold;
}

.allot-content {
  width: 656rpx;
  height: 378rpx;
  font-size: 28rpx;
  color: #333333;
}

.allot-inp {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 240rpx;
  position: relative;
}

.allot-inp text {
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
}

.allot-inp image {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right: 45rpx;
  bottom: 110rpx;
}

.allot-input {
  width: 432rpx;
  height: 48rpx;
  margin-left: 20rpx;
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #7B7B7B;
  border: 2rpx solid #e5e6eb;
}

.allot-btn {
  width: 486rpx;
  display: flex;
  align-items: center;
  text-align: center;
  margin: auto;
}

.allot-btn view:nth-of-type(1) {
  flex: 1;
  width: 208rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #0f89fc;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: bold;
  color: #ffffff;
  margin-right: 40rpx;
  border-radius: 5rpx;
}

.allot-btn view:nth-of-type(2) {
  flex: 1;
  width: 208rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #ffffff;
  border: 2rpx solid #e5e6eb;
  margin-left: 40rpx;
  border-radius: 5rpx;
}


.user-item {
  width: 654rpx;
  background: #ffffff;
  margin: 0 auto;
  padding: 32rpx 24rpx;
  border-radius: 10px;
  margin-bottom: 24rpx;
  margin-left: 24rpx !important;
}

.user-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-check {
  margin-left: 32rpx;
}

.user-wid {
  width: 634rpx !important;
  background: #ffffff;
  padding: 32rpx 24rpx;
  border-radius: 10px;
  margin-bottom: 24rpx;
  margin-right: 24rpx;
}

/*
  订单编号—状态
*/
.user-head {
  display: flex;
  justify-content: space-between;
}

.head-left {
  display: flex;
  align-items: center;
}

.head-left>text:nth-of-type(1) {
  color: #555555;
  font-size: 26rpx;
}

.head-right {
  display: flex;
  align-items: center;
}

.head-right>text:nth-of-type(2) {
  display: inline-block;
  color: #555555;
  font-size: 24rpx;
}

/*
  产品名称—数量
*/
.user-name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
  font-size: 28rpx;
}

.user-name>text:nth-of-type(1) {
  color: #333333;
  font-weight: bold;
}

.user-name>text:nth-of-type(2) {
  color: #7B7B7B;
}


/*
  规格属性
*/
.user-attribute {
  display: flex;
  margin-top: 16rpx;
}

.user-attribute>text {
  display: inline-block;
  background: #C4E2FF;
  border-radius: 8rpx;
  color: #4BA8FF;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  margin-right: 16rpx;
}

/* 
  客户名称/尾款状态/创建时间
*/
.common-contain {
  display: flex;
  align-items: center;
  color: #7B7B7B;
  font-size: 28rpx;
  margin-top: 24rpx;
}

.common-contain-text {
  display: inline-block;
  width: 145rpx !important;
}

/*
  按钮区域
*/

.btn-contain {
  border-top: 2rpx solid #EAEBEF;
  width: 100%;
  padding: 32rpx 0 0 0;
  margin-top: 24rpx;
  color: #0082FC;
  font-size: 28rpx;
  text-align: right;
}

/*
  公共样式
*/
.common-img-sty {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.disabled-sty {
  color: #B4B4B4 !important;
}

.disabled-bg-sty {
  background: #EAECF1 !important;
}

.disabled-price-sty {
  color: #555555 !important;
}

.tail-sty {
  color: #FAB042;
}

.auth-img {
  width: 32rpx;
  height: 32rpx;
  margin-left: 5rpx;
}