/* personal/pages/my-user/detail/detail.wxss */
page {
  background: #F5F7FB;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
}

.swiper-bg {
  height: 600rpx;
}

.user-detail {
  padding: 24rpx;
  font-size: 28rpx;
}

.user-btn {
  display: flex;
  align-items: center;
  justify-items: center;
  flex-direction: row;
}

.user-btn>view:nth-of-type(1) {
  width: 342rpx;
  height: 68rpx;
  line-height: 68rpx;
  margin-left: 26rpx;
  margin-bottom: 24rpx;
  text-align: center;
  background: #ffffff;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #555555;
  border-radius: 10rpx;
}

.user-btn>view:nth-of-type(2) {
  width: 342rpx;
  height: 68rpx;
  line-height: 68rpx;
  margin-left: 26rpx;
  margin-bottom: 24rpx;
  text-align: center;
  background: #ffffff;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #555555;
  border-radius: 10rpx;
}

/*
  线索头部信息样式
*/
.user-head {
  background: #ffffff;
  padding: 32rpx 24rpx;
  border-radius: 20rpx;
  margin-bottom: 22rpx;
}

.user-head-title {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.user-head-name {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
}


.user-head-name>text:nth-of-type(1) {
  display: inline-block;
  max-width: 460rpx;
  color: #333333;
  font-weight: bold;
}

.user-right-text {
  color: #333333;
  font-size: 28rpx;
  position: absolute;
  right: 0;
}

.bold {
  font-weight: bold;
}

.user-head-no {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 34rpx;
  color: #555555;
}

.user-source {
  display: flex;
  align-items: center;
}

.user-head-man {
  display: flex;
  justify-content: flex;
  align-items: center;
  margin-top: 34rpx;
  color: #555555;
}

/* 
  备注弹窗样式 
*/
.user-remark {
  width: 660rpx;
  height:480rpx;
}

.user-remark-title {
  margin: 15rpx;
  text-align: center;
}

.user-remark-content {
  width: 90%;
  display: flex;
  justify-content: center;
  color: #D9D9D9;
  margin: 30rpx;
}

.user-remark-textarea {
  margin-top: 16rpx;
  padding: 18rpx;
  width: 654rpx;
  height: 218rpx;
  font-size: 28rpx;
  color: #555555;
  background: #f3f6f7;
  border-radius: 15rpx;
}
.user-remark-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  margin: 30rpx;
}
.user-remark-cancel {
  width: 260rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #ffffff;
  border: 2rpx solid #0082FC;
  color: #0082FC;
  border-radius: 15rpx;
}

.user-remark-confirm {
  width: 260rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #0082FC;
  color: #ffffff;
  border-radius: 15rpx;
}

.head-man-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.follow-sty {
  color: #B4B4B4;
  font-size: 24rpx;
}

.bew-sty {
  display: flex;
  justify-content: space-between !important;
}

.p-sty {
  color: #D9D9D9;
}

.user-head-btn {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 30rpx 0 0rpx 0;
}

.user-head-btn>text {
  color: #0082FC;
  margin-left: 40rpx;
}

.user-btns {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin: 20rpx 15rpx 5rpx 15rpx;
  text-align: center;
  font-size: 24rpx;
}

.user-reg-btn {
  width: 342rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #ffffff;
  font-size: 24rpx;
  color: #b4b4b4;
  margin: 10rpx;
  border-radius: 10rpx;
}

.user-clue-btn {
  width: 342rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #ffffff;
  font-size: 24rpx;
  color: #b4b4b4;
  margin: 10rpx;
  border-radius: 10rpx;
}

.text-sty {
  color: #0082fc !important;
}

/*
  tab栏切换
*/
.user-tab {
  margin-top: 24rpx;
}

.fixed-sty {
  width: 100%;
  position: fixed;
  top: -24rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #F5F7FB;
  z-index: 9999 !important;
}


/*
  公共样式
*/
.common-img-sty {
  width: 32rpx;
  height: 32rpx;
}

.common-tag-sty {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 56rpx;
  height: 36rpx;
  padding: 0rpx 4rpx;
  background: #39A0FF;
  border-radius: 8rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  margin-left: 16rpx;
}

.common-certify-sty {
  width: 38rpx;
  height: 38rpx;
  margin-left: 16rpx;
}

.common-angle-sty {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
}

/* 
  分配弹窗样式
*/
.allot-box {
  width: 656rpx;
  height: 468rpx;
  background: #ffffff;
  overflow: hidden;
}

.allot-title {
  width: 656rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #eaebef;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  color: #333333;
  margin-left: 32rpx;
  font-weight: bold;
}

.allot-content {
  width: 656rpx;
  height: 378rpx;
  font-size: 28rpx;
  color: #333333;
}

.allot-inp {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 240rpx;
  position: relative;
}

.allot-inp text {
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
}

.allot-inp image {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right: 45rpx;
  bottom: 110rpx;
}

.allot-input {
  width: 432rpx;
  height: 48rpx;
  margin-left: 20rpx;
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #7B7B7B;
  border: 2rpx solid #e5e6eb;
}

.allot-btn {
  width: 486rpx;
  display: flex;
  align-items: center;
  text-align: center;
  margin: auto;
}

.allot-btn view:nth-of-type(1) {
  flex: 1;
  width: 208rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #0f89fc;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: bold;
  color: #ffffff;
  margin-right: 40rpx;
  border-radius: 5rpx;
}

.allot-btn view:nth-of-type(2) {
  flex: 1;
  width: 208rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #ffffff;
  border: 2rpx solid #e5e6eb;
  margin-left: 40rpx;
  border-radius: 5rpx;
}

.user-auth-btn {
  display: inline-block;
  background: #c4e2ff;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Light;
  text-align: center;
  color: #4ba8ff;
  margin-left: 4rpx;
  padding: 4rpx 8rpx;
}

.hei {
  height: 530rpx;
  border-radius: 15rpx;
}

.user-unit-name {
  display: flex;
  width: 1200rpx;
}

.auth-img {
  width: 32rpx;
  height: 32rpx;
  margin-left: 5rpx;
}