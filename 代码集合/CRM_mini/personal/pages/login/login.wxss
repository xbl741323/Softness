/* personal/pages/login/login.wxss */
.phone-login {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
}

/*
  登录logo
*/
.bg-sty {
  position: absolute;
  top: 0 !important;
  width: 100% !important;
  height: 404rpx !important;
}

/*
  登录表单
*/
.login-form {
  position: absolute;
  top: 312rpx;
  padding: 80rpx 0;
  width: 100%;
  margin-left: 50%;
  transform: translateX(-50%);
  background: #ffffff;
  border-radius: 40rpx 40rpx 0px 0px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.login-text {
  width: 630rpx;
  display: flex;
  flex-direction: column;
  color: #333333;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 70rpx;
}

.login-text>text:nth-of-type(2) {
  display: inline-block;
  width: 92rpx;
  height: 2rpx;
  background: #eaebef;
  margin-top: 28rpx;
}

.login-input {
  position: relative;
  width: 630rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 28rpx;
  margin-bottom: 50rpx;
}


.login-input>text:nth-of-type(1) {
  color: #333333;
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 32rpx;
}

.p-sty {
  font-size: 28rpx;
  color: #B4B4B4;
}

.input-contain{
  width: 100%;
  height: 86rpx;
  border-radius: 12rpx;
  background: #F5F7FC;
  padding-right: 18rpx;
}

.input-contain>input {
  width: 100%;
  height: 86rpx;
  border-radius: 12rpx;
  background: #F5F7FC;
  padding-left: 18rpx;
}

.pwd-input{
  width: 60% !important;
}

.error-input {
  transition: 0.5s;
}

.login-input>input {
  font-size: 28rpx;
  color: #555555;
}

.phone-error-code {
  position: absolute;
  bottom: -38rpx;
  left: 0;
  font-size: 24rpx;
  color: red;
}

.login-btn {
  width: 628rpx;
  height: 98rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 46rpx;
  background: linear-gradient(93deg, #1dabfa 5%, #0179fa 95%);
  border-radius: 25px;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
}

.wechat-btn {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 48rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #a5a5a5;
}

.wechat-btn .text {
  padding: 18rpx;
}

.wechat-btn .dash {
  display: inline-block;
  color: #E5E6EB;
  width: 200rpx;
  height: 0;
  border-top: 2rpx solid #e5e6eb;
}

.wechat-img {
  width: 40rpx;
  height: 40rpx;
  margin-left: 25rpx;
}

.pwd-sty{
  position: absolute;
  right: -10rpx;
  top: 85rpx;
  padding: 20rpx 30rpx;
}